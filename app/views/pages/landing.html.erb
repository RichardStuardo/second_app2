<%= render  "shared/navbar" %>
<p id="notice"><%= notice %></p>

<h1>Students</h1>

<div class="row">
  <div class="col-md-9">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.age %></td>
            <td><%= student.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
</div>

<%= link_to 'New Student', new_student_path %>
